<h1>Meme Maker</h1>

<div id="memes-list">
  <% @memes.each do |meme| %>
    <%= image_tag meme['url'], alt: "meme", class: "meme" %>
  <% end %>
</div>

<div id="myModal" class="modal">
  <div class="modal-content">
    <span class="close">&times;</span>
    <div class="row">
      <div class="col-6">Image</div>
      <div class="col-6">
        <h3>Name of the meme</h3>
        <form action="">
          <label>Top text</label><br>
          <input type="text"><br>
          <label>Bottom text</label><br>
          <input type="text"><br>
          <input type="submit">
        </form>
      </div>
    </div>
  </div>
</div>
